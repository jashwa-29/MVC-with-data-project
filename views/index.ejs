<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <div class="main-div shadow">
        <form action="/jopapi" method="post" class="form">
            <h1 class="mb-5">Job Application Form</h1>
            <div class="inp-div w-100">
                <input type="text" placeholder="First Name" name="firstname" class="form-control py-3 w-100">
                <input type="text" placeholder="Last Name" name="lastname" class="form-control py-3 w-100">
            </div>
            <div class="inp-div w-100">
                <input type="number" placeholder="Your Phone Number" name="phonenumber" class="form-control py-3 w-100">
                <input type="email" placeholder="Your Email-id" name="emaildata" class="form-control py-3 w-100">
            </div>


            <!-- <input type="text" placeholder="Postion Your applying for" name="postion" > -->
            <div class="input-group mb-0">
                <input type="text"  placeholder="Postion Your applying for" name="postion" class="form-control py-3" aria-label="Text input with dropdown button" id="drop-inpt">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false"></button>
                <ul class="dropdown-menu dropdown-menu-end">
                  <li><a class="dropdown-item" href="#" onclick="dropfunc('Full Stack Developer')">Full Stack Developer</a></li>
                  <li><a class="dropdown-item" href="#" onclick="dropfunc('UI UX Designer')">UI UX Designer</a></li>
                  <li><a class="dropdown-item" href="#" onclick="dropfunc('Data Analyst')">Data Analyst</a></li>
                  <li><a class="dropdown-item" href="#" onclick="dropfunc('Frontend Developer')">Frontend Developer</a></li>
                  <li><a class="dropdown-item" href="#" onclick="dropfunc('Backend Developer')">Backend Developer</a></li>
        
                </ul>
              </div>

              <div  class="inp-div w-100">
                <input type="number" placeholder="Year of Experience" name="experience" class="form-control py-3 w-100">
                <input type="text" placeholder="Your Location" name="location" class="form-control py-3 w-100">
        
              </div>
            

            <button type="submit" id="btn" class="w-100 py-3 text btn btn-outline-dark">Submit</button>
        </form>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
<script>
      let dropinpt = document.getElementById("drop-inpt")
      function dropfunc(dvalue) {
        dropinpt.value = dvalue
      }


      let buttons = document.getElementById("btn");

buttons.addEventListener('click', (event) => {
    event.preventDefault();
    let inputs = document.querySelectorAll('input');
    let isValid = true;
    inputs.forEach(input => {
        if (input.value === "") {
            isValid = false;
        }
    });
    if (!isValid) {
        alert("Please fill all the input fields");
    } else {
        // Access the form element using button's parent
        let form = buttons.closest('form');
        if (form) {
            form.submit();
        } else {
            alert("Form not found");
        }
    }
});




    

</script>
</body>
</html>